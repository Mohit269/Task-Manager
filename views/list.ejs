<%- include('header'); -%>
    <div class="box" id="heading">
    <h1><%= kindofday %> </h1>
    </div>
    <div class="box">
        <% for(var i=0;i<newlistitems.length;i++){ %>
         <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= newlistitems[i]._id %>" onChange="this.form.submit()">
                <p><%= newlistitems[i].name %></p>
                <input type="hidden" name="delete" value=<%= kindofday %>></input>
            </div>    
         </form>     
        
        <% } %>
        <form class="item" action="/" method="POST">
            <input type="text" name="litem" placeholder="New Task" autofocus>
            <button type="submit" name="button" value=<%= kindofday %> >+</button>
        </form>
        
    </div>
<%- include('footer'); -%>